<body>
    <div class="container">
        <h1>Search Results</h1>
        {{#if posts.length}}
            <ul class="posts-list">
                {{#each posts}}
                    <li class="post">
                        <h2>{{this.title}}</h2>
                        <p>{{this.content}}</p>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p class="no-results">No posts found matching your search criteria.</p>
        {{/if}}
    </div>
</body>